<link rel="stylesheet" href="/public/css/cardapio.css">

<div class="fixed-container" style="margin-bottom: 20px;">
  <div class="d-flex flex-row card-max-width mt-1 mb-2" id="groups">
    {{#each gruposJSON}}
    <div class="card mx-1 group-card mt-2 mb-2" style="min-width: 100px;" data-target="grupo{{this._id}}">
      <div class="card-body">
        <p class="card-title">{{capitalizeFirstLetter this.descricao}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<div class="px-3 py-3 " id="groupsDetail">
  {{#each gruposJSON}}
  <div id="grupo{{this._id}}" class="{{#if @last}}last-group-container{{/if}} mt-5">
    <h3>{{capitalizeFirstLetter this.descricao}}</h3>
    <div class="row">
      {{#each ../produtosJSON}}
      {{#ifEquals this.grupo._id ../_id}}
      <div class="card card-p mb-2">
        <div class="row no-gutters">
          <div class="col-4 d-flex align-items-center justify-content-center">
            {{#if this.fotos}}
            <img src="uploads/{{this.fotos.[0]}}" class="card-img product-image" alt="{{this.descricao}}">
            {{else}}
            <img src="/public/img/no-image.png" class="card-img product-image" alt="{{this.descricao}}">
            {{/if}}
          </div>
          <div class="col-8">
            <div class="card-body">
              <h5 class="card-title">{{capitalizeFirstLetter this.descricao}}</h5>
              <p class="card-text">{{this.especificacao}}</p>
              <p class="card-text">Preço: {{this.precoFormatado}}</p>
              <button class="btn btn-light" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapseIngredients{{this._id}}" aria-expanded="false"
                aria-controls="collapseIngredients{{this._id}}">
                <i id="toggleIcon{{this._id}}" class="fas fa-plus"></i>Ingredientes
              </button>
              <div class="collapse" id="collapseIngredients{{this._id}}">
                <div class="card card-body">
                  {{#each ingredientes}}
                  <li>{{this.descricao}}</li>
                  {{/each}}
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
      {{/ifEquals}}
      {{/each}}
    </div>
  </div>
  {{/each}}
</div>

<!-- Guia de botões -->
<div class="fixed-bottom">
  <!-- Coloque aqui seus botões -->
</div>

<script src="/public/js/cardapio.js"></script>