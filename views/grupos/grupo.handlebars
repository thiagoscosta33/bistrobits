<div class="row mt-4">
  <div class="col col-xs-12 col-md-6">
    <h3>Lista de grupos</h3>
  </div>
  <div class="col col-xs-12 col-md-6">
    <form action="/grupos/pesquisar" method="GET" class="form-inline">
      <div class="mb-3">
        <div class="input-group">
          <input type="text" name="searchGrupo" class="form-control border-end-0 border"
            placeholder="Pesquisar grupos...">
          <div class="input-group-append">
            <button type="submit" class="btn btn-primary border-start-0 border-left-rounded"><i
                class="fa fa-search"></i></button>
          </div>
        </div>
      </div>
    </form>
  </div>

</div>
<hr>
<a href="/grupos/add" class="btn btn-primary">Adicionar</a>
{{#each grupos}}
<div class="card mt-3">
  <div class="card-body">
    <div class="row">
      <div class="col col-xs-12 col-md-8">
        <h5>{{this.descricao}}</h5>

        {{#if this.listarNoCardapio}}
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="ckOnListCard_{{_id}}" checked disabled>
          <label class="form-check-label" for="ckOnListCard_{{_id}}">Listagem ativa</label>
        </div>
        {{else}}
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="ckOffListCard_{{_id}}" disabled>
        </div>
        {{/if}}


      </div>
      <div class="col col-xs-12 col-md-4 custom-align-right">
        <a href="/grupos/edit/{{_id}}"><button class="btn btn-primary custom-btn mt-3">Editar grupo</button></a>
        <form action="/grupos/deletar" method="post">
          <input type="hidden" name="id" value="{{_id}}">
          <button type="submit" class="btn btn-danger custom-btn mt-2">Deletar grupo</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{else}}
<h4 class="mt-4">Nenhum grupo registrado</h4>
{{/each}}